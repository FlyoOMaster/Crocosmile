nav.navbar.navbar-default
  .container-fluid
    // Brand and toggle get grouped for better mobile display
    .navbar-header
      button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#userMenu")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href="#") Crocosmile
    // Collect the nav links, forms, and other content for toggling
    #userMenu.collapse.navbar-collapse
      if user
        ul.nav.navbar-nav.navbar-right
          li.dropdown
            a.dropdown-toggle(href="#", data-toggle="dropdown", role="button", aria-expanded="false") #{user.username}
              span.caret
            ul.dropdown-menu(role="menu")
              li
                a(href="#") Account
              li.divider            
              li
                a(href="/logout") Logout
